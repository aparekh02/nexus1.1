{
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "pnpm install",
        "buildCommand": "pnpm build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile"
}
